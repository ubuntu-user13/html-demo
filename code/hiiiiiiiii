

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Scroll Box</title>

  <style>
    body {
      margin: 0;
      height: 300vh; /* forces scrolling */
      background: #111;
    }

    #box {
      position: fixed;
      top: 0;
      left: 0;
      width: 120px;
      height: 120px;
      background: red;
      will-change: transform;
    }
  </style>
</head>
<body>

  <div id="box"></div>

  <script>
    const box = document.getElementById("box");

    window.addEventListener("scroll", () => {
      const scrollY = window.scrollY;
      const maxScroll =
        document.body.scrollHeight - window.innerHeight;

      // normalize scroll (0 â†’ 1)
      const progress = scrollY / maxScroll;

      // viewport size
      const vw = window.innerWidth;
      const vh = window.innerHeight;

      // move anywhere
      const x = progress * (vw - 120);
      const y = Math.sin(progress * Math.PI) * (vh - 120);

      // scale
      const scale = 0.5 + progress * 1.5;

      box.style.transform =
        `translate(${x}px, ${y}px) scale(${scale})`;
    });
  </script>

</body>
</html>
